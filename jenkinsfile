pipeline {
    agent any

    stages {
        stage('deploy') {
            agent {
                docker {
                    image 'node:18'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    export NPM_CONFIG_GLOBALCONFIG=/dev/null
                    npm install netlify-cli
                    npx netlify --version
                '''
            }
        }
    }
}

