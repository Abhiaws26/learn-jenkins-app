pipeline {
    agent any

    environment {
        NPM_CONFIG_CACHE = './.npm-cache'
    }

    stages {
        stage('Install and Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    ls -la
                    npm --version
                    node --version
                    npm ci
                    npm run build
                    ls -la
                '''
            }
        }

        stage('Test Build Output') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    test -f build/index.html
                    npm test
                '''
            }
        }

        stage('End-to-End Tests') {
            agent {
                docker {
                    image 'mcr.microsoft.com/playwright:v1.51.0-noble'
                    reuseNode true
                }
            }
            environment {
                DOCKER_TMPDIR = '/data/docker-tmp'
            }
            steps {
                sh '''
                    mkdir -p "$DOCKER_TMPDIR"
                    npm install -g serve
                    serve -s build &
                    sleep 15
                    npx playwright test
                '''
            }
        }

        stage('Docker Pull (Optional)') {
            environment {
                DOCKER_TMPDIR = '/data/docker-tmp'
            }
            steps {
                sh '''
                    mkdir -p "$DOCKER_TMPDIR"
                    docker pull mcr.microsoft.com/playwright:v1.51.0-noble
                '''
            }
        }
    }
}

