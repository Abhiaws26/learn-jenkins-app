pipeline {
    agent any

    stages {
        stage('Install and Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            environment {
                NPM_CONFIG_CACHE = './.npm-cache'
            }
            steps {
                sh '''
                    ls -la
                    npm --version
                    node --version
                    npm ci
                    npm run build
                    ls -la
                '''
            }
        }

        stage('Test Build Output') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    test -f build/index.html
                    npm test
                '''
            }
        }

        stage('e2e') {
            agent {
                docker {
                    image 'mcr.microsoft.com/playwright:v1.52.0-noble-chrome'

                    reuseNode true
                }
            }
            steps {
                sh '''
                    echo "e2e has began"
                    # Start the app in the background
                    npm install -g serve
                    serve -s build &
                    
                    # Wait for the server to be ready
                    sleep 15
                    
                    # Run Playwright tests
                    npx playwright test
                '''
            }
        }

        // Optional: clean up docker space before or after heavy stages
        stage('Docker Cleanup') {
            agent any
            steps {
                sh '''
                    docker system prune -af --volumes || true
                '''
            }
        }
    }

    post {
        always {
            echo 'Cleaning up workspace and temporary files...'
            deleteDir()
        }
    }
}

