pipeline {
    agent any

    environment {
        NPM_CONFIG_CACHE = './.npm-cache'
    }

    stages {
        stage('Install and Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    ls -la
                    npm --version
                    node --version
                    npm ci
                    npm run build
                    ls -la
                '''
            }
        }

        stage('Test Build Output') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            environment {
                TMPDIR = './.tmp'  // Correctly placed under the environment block for this stage
            }
            steps {
                sh '''
                    mkdir -p "$TMPDIR"
                    test -f build/index.html
                    npm test
                '''
            }
        }

        stage('deploy') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    npm install -g netlify-cli
                    netlify --version
                '''
            }
        }
    }
}

