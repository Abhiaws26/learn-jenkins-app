stage('deploy') {
    agent {
        docker {
            image 'node:18'
            reuseNode true
            args '-u 0'
        }
    }
    steps {
        sh '''
            export NPM_CONFIG_GLOBALCONFIG=/dev/null
            export npm_config_cache=$NPM_CONFIG_CACHE
            mkdir -p "$NPM_CONFIG_CACHE"

            npm install netlify-cli
            npx netlify --version
        '''
    }
}

