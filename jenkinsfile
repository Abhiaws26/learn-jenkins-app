pipeline{
    agent any
    stages{
        stage('build-stage'){
            agent{
                docker{
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps{
                sh '''
                    ls -la
                    npm --version
                    node --version
                    npm run build
                    ls -la
                '''

            }
        }
        }
    }

